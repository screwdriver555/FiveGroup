@using PagedList;
@using PagedList.Mvc;


@model FiveGroup.ViewModel.HospitalLocation

@{
    ViewBag.Title = "醫院管理面板";
}




<link href="~/Content/HospitalStyle.css" rel="stylesheet" />

<div class="shadow p-3 mb-5 bg-white rounded">
    <h2 class="text-center"><strong>醫院清單</strong></h2>
</div>

<div class="row">
    <div class="col-md-auto">
        <h5 class="alert alert-success">@ViewBag.cityname</h5>
    </div>
    <div class="col-md-auto">
        <div class="dropdown dropright">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                選擇縣市
            </button>
            <div class="dropdown-menu">
                @foreach (var item in Model.Cities)
                {
                    @Html.ActionLink(item.city_name, "Index", new { cityId = item.c_id }, new { @class = "dropdown-item" })
                }
            </div>
        </div>
    </div>

    <div class="col-md-auto">
        <div class="dropdown dropright">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                選擇地區
            </button>
            <div class="dropdown-menu">
                @foreach (var item in Model.Districts)
                {
                    @Html.ActionLink(item.district_name, "Index", new { cityId = item.c_id, districtId = item.d_id }, new { @class = "dropdown-item" })
                }
            </div>
        </div>
    </div>

    <div class="col-md-auto ml-auto">
        @Html.ActionLink("新增資料", "Create", new { cityId = ViewBag.cityID }, new { @class = "btn btn-info" })
    </div>
</div>

<table class="table">
    <tr class="row text-center">
        <th class="col-2">
            中文名稱
        </th>
        <th class="col-3">
            英文名稱
        </th>
        <th class="col-2">
            地址
        </th>
        <th class="col-2">
            聯絡電話
        </th>
        <th class="col-1">
            狀態
        </th>
        <th class="col-1">
            地區
        </th>
        <th class="col-1"></th>
    </tr>

    @foreach (var item in Model.HospitalPages)
    {
        <tr class="row text-center">
            <td class="col-2">
                @Html.DisplayFor(modelItem => item.hos_name)
            </td>
            <td class="col-3">
                @Html.DisplayFor(modelItem => item.hos_eng_name)
            </td>
            <td class="col-2">
                @Html.DisplayFor(modelItem => item.hos_address)
            </td>
            <td class="col-2">
                @Html.DisplayFor(modelItem => item.hos_phone)
            </td>
            <td class="col-1">
                @if (item.hos_display == false)
                {
                    <span class="badge badge-secondary">隱藏</span>}
                else
                {
                    <span class="badge badge-success">顯示</span>}
            </td>
            <td class="col-1">
                @Html.DisplayFor(modelItem => item.district.district_name)
            </td>
            <td class="col-1">
                @Html.ActionLink("編輯", "Edit", "Hospitals", new { id = item.hos_id, cityId = item.c_id }, null)
            </td>
        </tr>
    }

</table>
<div class="text-center">
    @Html.PagedListPager(Model.HospitalPages, page => Url.Action("Index", new { page }))
</div>








